<div class="container">
    <h2>Single post</h2>

    <div class="card mb-3">
        <div class="card-body">
            <h2 class="card-title">{{post.title}}</h2>
            <p class="card-text">{{post.content}}</p>
            <p class="card-text">{{post.author}}</p>
            {{#if _id}}
            <a href="/blog/{{_id}}/edit" class="btn btn-primary">Edit</a>
            {{/if}}
            <a href="/blog/delete/{{_id}}" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>